{
  "name": "spotify-music-server",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "node server.js",
    "dev:next": "next dev -H 0.0.0.0",
    "build": "prisma generate && next build",
    "build:pages": "prisma generate && next build && node scripts/prepare-pages.js",
    "postinstall": "prisma generate",
    "start": "NODE_ENV=production node server.js",
    "start:next": "next start -H 0.0.0.0",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "tunnel:setup": "cloudflared tunnel create music-player",
    "tunnel:start": "cloudflared tunnel run music-player",
    "tunnel:auto": "node scripts/auto-tunnel.js",
    "tunnel:install": "cloudflared service install",
    "dev:tunnel": "concurrently \"npm run dev\" \"npm run tunnel:start\"",
    "start:all": "concurrently --kill-others \"npm run dev\" \"npm run tunnel:auto\"",
    "pwa:icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.19.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@types/multer": "^1.4.12",
    "chokidar": "^3.6.0",
    "dotenv": "^17.2.4",
    "electron-store": "^8.2.0",
    "framer-motion": "^12.31.0",
    "lucide-react": "^0.563.0",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^9.0.1",
    "next": "^14.2.0",
    "next-auth": "^4.24.7",
    "nodemailer": "^7.0.13",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-dropzone": "^14.4.0",
    "react-hot-toast": "^2.6.0",
    "react-window": "^2.2.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "systeminformation": "^5.21.20",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.39",
    "prisma": "^5.19.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.spotify-clone.desktop",
    "productName": "Spotify Clone Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
